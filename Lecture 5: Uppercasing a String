#include<stdio.h>
#include <ctype.h>
#include <string.h>
int main() {
char word[100];
scanf("%s", word);
int i;
for( i=0; i<strlen(word); i++) {
word[i] = toupper(word[i]);
}
printf("%s", word);
}
