// 1 2 4 6 ( 0,i) i>0
// 0 2 3 2 (1,1)
// 0 9 1 3 
// 2 3 2 2 
// i , j : j <=i
// i = 0 1 .... n-1
// i=1 j : 0 to 1
i = 2 , j : 0 to 2
// i : 0 to n-1
// j : 0 to i

CODE FOR PRINTING THE LOWER TRANGULAR PART : 
#include<stdio.h>
int main() {
int n,i,j;
scanf("%d", &n);
int a[n][n];
for ( i=0;i<n;i++) {
for (j=0; j<n;j++) {
scanf("%d", & a[i][j]);
}
}
printf("###################\n");
for ( i=0;i<n;i++) {
for( j=0; j<=i;j++) {
printf("%d ", a[i][j]);
}
printf("\n");
}
return 0;
}

CODE FOR PRINTING THE UPPER TRIANGULAR PART : 


#include<stdio.h>
int main() {
int n,i,j;
scanf("%d", &n);
int a[n][n];
for ( i=0;i<n;i++) {
for (j=0; j<n;j++) {
scanf("%d", & a[i][j]);
}
}
printf("###################\n");
for ( i=0;i<n;i++) {
    for( j = i;j<n ; j++) {
    printf("%d ", a[i][j]);
}
printf("\n");
}
return 0;
}

