avg of 3 marks : 
#include<stdio.h>

int main() {
    int a[3];
    float sum = 0;
    
    for (int i = 0; i < 3; i++) {
        scanf("%d", &a[i]); // Change %d to %f to match the type of 'sum'
        sum = sum + a[i];
    }
    
    sum = sum / 3;
    printf("%.2f", sum);
    
    return 0;
}
-------------------------------------------------------------------------------------------------------------------------------------------------------------------

find the maximum number of an array : 

#include<stdio.h>

int main() {
    int n;
    printf("Enter the size of the array: ");
    scanf("%d", &n);
    
    int a[n];
    printf("Enter %d numbers:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
    
    int max = a[0]; // Initialize max to the first element of the array
    for (int i = 1; i < n; i++) {
        if (a[i] > max) {
            max = a[i];
        }
    }
    
    printf("The maximum number is: %d\n", max);
    return 0;
}
